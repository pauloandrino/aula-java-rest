<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/
persistence http://java.sun.com/xml/ns/persistence/
persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="PauloPu">
		<properties>
			<property name="javax.persistence.jdbc.driver" value="oracle.jdbc.OracleDriver" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.Oracle8iDialect" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="javax.persistence.jdbc.url"
				value="jdbc:oracle:thin:@localhost:1521:xe" />
			<property name="javax.persistence.jdbc.user" value="gft" />
			<property name="javax.persistence.jdbc.password" value="password" />
			<property name="javax.persistence.transactionType" value="RESOURCE_LOCAL" />
			<property name="hibernate.show_sql" value="true" />
			
<!-- 			<PROPERTY NAME="HIBERNATE.CACHE.USE_SECOND_LEVEL_CACHE" VALUE="TRUE"></PROPERTY> -->
<!-- 			<PROPERTY NAME="HIBERNATE.CACHE.PROVIDER_CLASS" VALUE="ORG.HIBERNATE.CACHE.EHCACHEPROVIDER"></PROPERTY> -->
<!-- 			<PROPERTY NAME="HIBERNATE.CACHE.REGION.FACTORY_CLASS" VALUE="ORG.HIBERNATE.CACHE.EHCACHE.SINGLETONEHCACHEREGIONFACTORY"></PROPERTY> -->
			
		</properties>
	</persistence-unit>
</persistence>